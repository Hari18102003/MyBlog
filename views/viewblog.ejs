<%- include("partials/header.ejs") %>

    <div class="container">

        <div class="nav">
            <p><a href="/" class="nav-link">Home</a>/<a href="/<%= blog._id %>" class="nav-link">
                    <%= blog.title %>
                </a> </p>
        </div>
        <% if(blog){ %>
            <div class="view-blog">
                <div class="view-blog-header">
                    <h1>
                        <%= blog.title %>
                    </h1>
                    <p>
                        <%= blog.date %>
                    </p>
                </div>
                <div class="view-blog-img">
                    <img src="<%= blog.image %>" alt="<%= blog.title %>">
                </div>

                <p class="viewblog-content">
                    <%= blog.content %>
                </p>
            </div>
            <div class="btn">
                <button class="update-btn"><a href="/update/<%= blog._id %>">Update Blog</a></button>
                <button class="delete-btn"><a href="/delete/<%= blog._id %>">Delete Blog</a></button>
            </div>
            <% }else{ %>
                <h1>Oops Something went wrong...</h1>
                <% } %>
    </div>

    <%- include("partials/footer.ejs") %>