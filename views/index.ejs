<%- include("partials/header.ejs") %>

    <div class="container">

        <% if(blogs.length> 0){ %>
            <% blogs.forEach(blog=> { %>
                <a href="/<%= blog._id %>">
                    <div class="card">
                        <div class="img-holder">
                            <img src="<%= blog.image %>" alt="<%= blog.title %>">
                        </div>
                        <div class="content">
                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="description">
                                <% if(blog.content.length> 100){ %>
                                    <%= blog.content.substring(0, 140)%> <span class="readmore">Readmore...</span>
                                        <% }else{ %>
                                            <%= blog.content %>
                                                <% } %>
                            </p>
                            <p class="date">
                                <%= blog.date %>
                            </p>
                        </div>
                    </div>
                </a>
                <% }); %>
                    <% }else{ %>
                        <h1>No Blogs yet, Create one...</h1>
                        <% } %>

                            <a href="/viewmore" class="more">More Blogs...</a>
    </div>

    <%- include("partials/footer.ejs") %>